<Window x:Class="SpeechToolGUI.ParamsSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Console" Height="200" Width="300" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Select Target Console:" />
        <ComboBox x:Name="ConsoleComboBox" Margin="0,5,0,0"/>
        <TextBlock Text="Select Target Game:" Margin="0,10,0,0"/>
        <ComboBox x:Name="GameComboBox" Margin="0,5,0,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="OK" Width="75" Margin="5" Click="Ok_Click"/>
            <Button Content="Cancel" Width="75" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
